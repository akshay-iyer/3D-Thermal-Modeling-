IF(WIN32 OR win64)
   SET(IS_WINDOWS TRUE)
   SET(IS_LINUX FALSE)
   ADD_DEFINITIONS(-D_IS_WINDOWS_)
   SET(DLL_EXT "dll")
   SET(LIB_PREFIX "")
   string(REGEX REPLACE "\\\\" "/" USERPROFILE "$ENV{USERPROFILE}")
   SET(CMAKE_FIND_LIBRARY_SUFFIXES .lib .dll)
ELSE()
   SET(IS_WINDOWS FALSE)
   SET(IS_LINUX TRUE)
   ADD_DEFINITIONS(-D_IS_LINUX_)
   SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -std=gnu++11") # To enable "mutex" header to be used: (std=c++11 / -std=gnu++11)
   SET(DLL_EXT "so")
   SET(LIB_PREFIX "lib")
   string(REGEX REPLACE "\\\\" "/" USERPROFILE "$ENV{HOME}")
   SET(THERMALVIS_COMPILE_FLAGS "${THERMALVIS_COMPILE_FLAGS} -Wno-write-strings")
   SET(CMAKE_FIND_LIBRARY_SUFFIXES .so .a)
   SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -Wno-write-strings" )
   #ADD_DEFINITIONS(-fPIC)
   #ADD_DEFINITIONS(-with-libdir=lib64)
ENDIF()

add_definitions( -D_USERPROFILE_=\"${USERPROFILE}\" )


